gem 'coffee-rails', '~> 4.2'
# See https://github.com/rails/execjs#readme for more supported runtimes
#gem 'duktape'
gem 'font-awesome-rails', '~> 4.7'
gem 'haml', '~> 5.1.1'
gem 'jbuilder', '~> 2.5'
gem 'jquery-rails', '~> 4.3.3'
gem 'puma', '~> 3.12'
gem 'rails', '~> 5.2.3'
